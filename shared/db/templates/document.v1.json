{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "document.v1",
  "title": "Document Schema",
  "description": "Schema for generic document data",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Document ID"
    },
    "title": {
      "type": "string",
      "description": "Document title",
      "minLength": 1,
      "maxLength": 200
    },
    "content": {
      "type": "string",
      "description": "Document content"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Document tags"
    },
    "author": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["id"]
    },
    "status": {
      "type": "string",
      "enum": ["draft", "published", "archived"],
      "description": "Document status"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Document version number"
    }
  },
  "required": ["id", "title", "content"]
}
