{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "chat.v1",
  "title": "Chat Schema",
  "description": "Schema for chat conversation data",
  "type": "object",
  "properties": {
    "chat_id": {
      "type": "string",
      "description": "Unique chat identifier"
    },
    "chat": {
      "type": "array",
      "description": "Array of chat messages",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["user", "assistant", "system"],
            "description": "Message type"
          },
          "text": {
            "type": "string",
            "description": "Message content",
            "minLength": 1
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Message timestamp"
          }
        },
        "required": ["type", "text"]
      },
      "minItems": 1
    }
  },
  "required": ["chat"]
}
